<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="@dimen/padding.default"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_rv_item_history">

    <ImageView
        android:id="@+id/rv_item_history_iv_recent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_recent_history"
        android:tint="@color/colorSecondaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_history_tv"
        style="@style/AppTheme.TextView.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin.spacing"
        android:clickable="false"
        android:paddingEnd="@dimen/padding.default"
        android:paddingStart="@dimen/padding.default"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_item_history_iv_recent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rv_item_history_btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="@dimen/padding.default"
        android:background="@drawable/ripple_rv_item_history_btn_insert"
        android:tint="@color/colorPrimaryDark"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>