<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freelance.netanel.androidsearchapp.activities.ProductActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_product_iv_product"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/activity_product_tv_description"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"/>

    <Button
        android:id="@+id/activity_product_btn_buy"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn.buy"
        android:layout_weight="1"/>


</LinearLayout>
